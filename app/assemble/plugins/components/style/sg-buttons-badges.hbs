{{h3 "Stateful Sessions"}}
{{#styleguide "Stateful" '
{{#button "btn" "primary load" id="keeda2" data-loading-text="Loading..."}}
  Loading state
{{/button}}
<script>
    (function($) {
      $(\'#keeda2\')
      .click(function () {
        var btn = $(this)
        btn.button(\'loading\')
        setTimeout(function () {
          btn.button(\'reset\')
        }, 3000)
      })
    })(jQuery);
  </script>
'}}{{.}}{{/styleguide}}

