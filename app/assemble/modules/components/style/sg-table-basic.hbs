{{#prettify}}
{{#table class=modifier}}
  {{#thead}}
    {{#tr}}
      {{#each tablehead}}
        {{th thead}}
      {{/each}}
    {{/tr}}
  {{/thead}}
  {{#tbody}}
    {{#each tables2}}
      <tr{{isClass modRow}}>
      {{!#tr class=(isThis modRow)}}
        {{td Id}}
        {{td First}}
        {{td Last}}
        {{td Git}}
      {{!/tr}}
      </tr>
    {{/each}}
  {{/tbody}}
{{/table}}
{{/prettify}}
