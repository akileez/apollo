{{#address}}
  {{strong name}}{{br}}
  {{street}}{{br}}
  {{town}}, {{state}}, {{zip}}{{br}}
  {{#is phonenumber}}
    {{abbr "Phone" "P:"}} {{phonenumber}}
  {{/is}}
{{/address}}

{{#is contactName}}
{{#address}}
  {{strong contactName}}{{br}}
  {{a mailTo href=(isThat mailTo "mailto:")}}
{{/address}}
{{/is}}