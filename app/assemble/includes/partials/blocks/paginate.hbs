{{#ul class=(ifThat modifier "pagination")}}
  {{#is pagination.currentPage 1}}
    <li class="previous">
      <a href="{{relative page.dest "../index.html"}}">Home</a>
    </li>
  {{/is}}
  {{#isnt pagination.currentPage 1}}
    <li class="previous">
      <a href="{{relative page.dest prev.dest}}">&laquo;</a>
    </li>
  {{/isnt}}

  {{#eachItems pages}}
    <li{{#is ../page.dest this.dest}} class="active"{{/is}}>
      <a href="{{relative ../page.dest this.dest}}">{{@number}}</a>
    </li>
  {{/eachItems}}

  {{#isnt pagination.currentPage pagination.totalPages}}
    <li class="next">
      <a href="{{relative page.dest next.dest}}">&raquo;</a>
    </li>
  {{/isnt}}
  {{#is pagination.currentPage pagination.totalPages}}
    <li class="next disabled">
      <a href="{{relative page.dest next.dest}}">&raquo;</a>
    </li>
  {{/is}}
{{/ul}}